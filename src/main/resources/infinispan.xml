<?xml version="1.0" encoding="UTF-8"?>
<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:7.0 http://www.infinispan.org/schemas/infinispan-config-7.0.xsd"
        xmlns="urn:infinispan:config:7.0">

    <jgroups>
        <stack-file name="udp" path="default-configs/default-jgroups-udp.xml"/>
    </jgroups>

    <cache-container default-cache="default" statistics="true" >
        <transport stack="udp"/>
        <jmx
                domain="org.infinispan"
                duplicate-domains="true"
                mbean-server-lookup="org.infinispan.jmx.PlatformMBeanServerLookup"/>
        <distributed-cache name="default" statistics="true">
            <indexing auto-config="true"/>
        </distributed-cache>
        <distributed-cache name="hostCache" statistics="true">
            <persistence>
                <file-store path="store/hosts"/>
            </persistence>
            <indexing auto-config="true"/>
        </distributed-cache>
        <distributed-cache name="vmCache">
            <persistence>
                <file-store path="store/vms"/>
            </persistence>
            <indexing auto-config="true"/>
        </distributed-cache>
        <distributed-cache name="projectCache">
            <persistence>
                <file-store path="store/projects"/>
            </persistence>
            <indexing auto-config="true"/>
        </distributed-cache>
        <distributed-cache name="auditCache" mode="ASYNC">
            <persistence>
                <file-store path="store/audit"/>
            </persistence>
            <indexing auto-config="true"/>
        </distributed-cache>
        <distributed-cache name="eventCache" mode="ASYNC">
            <persistence>
                <file-store path="store/event"/>
            </persistence>
            <indexing auto-config="true"/>
        </distributed-cache>
        <distributed-cache name="controllerDynamicCache" mode="ASYNC">
            <persistence>
                <file-store path="store/controller-dynamic"/>
            </persistence>
            <indexing auto-config="true"/>
        </distributed-cache>
    </cache-container>
</infinispan>